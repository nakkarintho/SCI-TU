<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"

    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        >
        <ImageView
            android:id="@+id/status_imageView"
            android:layout_width="26dp"
            android:layout_height="26dp"


            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/checklist_name_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fontFamily="@font/my_font"
            android:textSize="18sp"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"

            />
        <ImageView
            android:id="@+id/edit_imageView"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_edit_red"
            />
        <ImageView
            android:id="@+id/delete_imageView"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_delete_red"
            />
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/placeholder_background"/>
</LinearLayout>